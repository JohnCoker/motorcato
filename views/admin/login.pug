extends layout

block content
  h1= title

  each error in errors
    div(role="alert").alert.alert-warning= error
  p Please enter the registered email address and password if you are a site administrator.

  form(method="post", action="/admin/login").login
    if from
      input(type="hidden" name="from" value=from)
    .form-row
      .form-col.col.col-md-2
        .form-group
          label(for="email") E-mail address
          input(type="email" name="email" required autocomplete="username").form-control
    .form-row
      .form-col.col.col-md-2
        .form-group
          label(for="password") Password
          input(type="password" name="password" required autocomplete="current-password").form-control
    .form-row
      .form-col.col.col-md-2
        .form-group
          button(type="submit").btn.btn-primary Login
          span &nbsp;
          a(href="/admin/forgot").btn.btn-secondary Forgot
