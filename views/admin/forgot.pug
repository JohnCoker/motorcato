extends layout

block content
  h1= title

  each error in errors
    div(role="alert").alert.alert-warning= error
  if submitted
    .alert.alert-info(role="alert") If you are a registered administrator, a password reset email has been sent.
  else
    p Please enter the email address under which you registered and a password reset email will be sent.
          
  form(method="post", action="/admin/forgot")
    .form-row
      .form-col.col.col-md-2
        .form-group
          label(for="email") E-mail address
          input(type="email" name="email" required autocomplete="username").form-control
    .form-row
      .form-col.col.col-md-2
        .form-group
          button(type="submit").btn.btn-primary Forgot
          span &nbsp;
          a(href="/admin/login").btn.btn-secondary Login
